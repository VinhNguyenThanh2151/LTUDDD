<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_register"
    tools:context=".Activity.SignUpActivity">

    <RelativeLayout
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bg_click"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_register"
                android:textColor="#1B1638"
                android:textSize="40dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Create your new accout"
                android:src="@drawable/ic_register"
                android:textColor="#1B1638"
                android:textSize="12dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPick"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="2dp"
                android:layout_marginTop="10dp"
                android:tint="#382D74"
                android:src="@drawable/ic_attach_image"
                android:padding="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/sans_regular"
                android:drawableStart="@drawable/ic_person"
                android:padding="15dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:background="@drawable/custom_bg_text"
                android:hint="User Name"
                android:drawableTint="#1B1638"
                android:textColorHint="#1B1638"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#1B1638" />



            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/sans_regular"
                android:drawableStart="@drawable/ic_email"
                android:padding="15dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:background="@drawable/custom_bg_text"
                android:hint="Email"
                android:drawableTint="#1B1638"
                android:textColorHint="#1B1638"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#1B1638" />


            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/sans_regular"
                android:drawableStart="@drawable/ic_lock"
                android:padding="15dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:background="@drawable/custom_bg_text"
                android:drawableTint="#1B1638"
                android:textColorHint="#1B1638"
                app:layout_constraintTop_toBottomOf="@+id/edt_email"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#1B1638" />

            <Button
                android:id="@+id/bt_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:text="SignUp"
                android:background="@drawable/custom_bg_text"
                android:textColor="@color/white"
                android:backgroundTint="#53A7F4"
                android:textStyle="bold"
              />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/login_string"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>